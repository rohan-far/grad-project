<h1>All Departments</h1>

<ul>
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= button_to 'Delete', @department, method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</ul>

<%= link_to 'Add New', new_department_path %>
