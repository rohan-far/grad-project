<%= form_with(model: @employee) do |form| %>
       
    <div>
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name %>
    </div>
      
    <div>
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name %>
    </div>
    
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :yearly_salary %>
      <%= form.number_field :yearly_salary %>
      <% if @employee.errors[:yearly_salary].any? %>
        <div style="color: red;">
          <%= @employee.errors[:yearly_salary].first %>
        </div>
      <% end %>
    </div>

    <div>
      <%= form.label :department_id %>
      <%= form.collection_select :department_id, Department.all, :id, :name, prompt: "Engineering" %>
    </div>
    
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  